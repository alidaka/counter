<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <EditText android:id="@+id/label_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Counter Label" />

    <LinearLayout android:id="@+id/step_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <EditText android:id="@+id/step_field"
            android:layout_width="36sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="1"
            android:inputType="numberSigned" />
        <TextView android:id="@+id/step_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="counts per tap"
            android:layout_gravity="left|center" />
    </LinearLayout>

    <LinearLayout android:id="@+id/count_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <EditText android:id="@+id/count_field"
            android:layout_width="36sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="0"
            android:inputType="numberSigned" />
        <TextView android:id="@+id/count_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="initial count"
            android:layout_gravity="left|center" />
    </LinearLayout>

    <Button android:id="@+id/submit"
        android:text="Create Counter!"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
